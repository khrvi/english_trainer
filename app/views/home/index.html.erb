<div id="content">
  <h1 id="stats" style="float:left;"><%= @words.total_entries %> Words</h1>
  <div style="clear:both;"></div>
  <%= will_paginate @words %>

  <table>
    <thead>
      <tr id="header">
        <th class="">English</th>
        <th class="">Russian</th>
      </tr>
    </thead>
    <% @words.each do |word| %>
      <tr>
        <td>
          <strong><%= word.word %></strong>
        </td>
        <td><%= translate(word).html_safe %></td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @words %>
</div>