<p id="notice"><%= notice %></p>

<h1>Dictionary: <%= @dictionary.name %></h1>
<div id="content" class='block'>
  <h1 id="stats" style="float:left;"><%= @words.total_entries %> words</h1>
  <div style="clear:both;"></div>
  <%= will_paginate @words %>

  <table class='standard'>
    <thead>
      <tr id="header">
        <th class="">English</th>
        <th class="">Russian</th>
        <th colspan='2'>Actions</th>
        
      </tr>
    </thead>
    <% @words.each do |word| %>
      <tr>
        <td>
          <strong><%= word.word %></strong>
        </td>
        <td><%= link_to translate(word).html_safe, word %></td>

        <!-- <td><%= link_to 'Show', word %></td> -->
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
  
<% content_for :menu do %>
  <%= link_to 'New Word', new_word_path(:word => {:dictionary_id => @dictionary.id}) %> |
  <%= link_to 'Edit', edit_dictionary_path(@dictionary) %> |
  <%= link_to 'Back', dictionaries_path %>
<% end %>
<% content_for :menu_bottom do %>
  <%= link_to 'New Word', new_word_path(:word => {:dictionary_id => @dictionary.id}) %> |
  <%= link_to 'Edit', edit_dictionary_path(@dictionary) %> |
  <%= link_to 'Back', dictionaries_path %>
<% end %>